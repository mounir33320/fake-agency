<div class="col-md-3 mb-4">
    <div class="card">
        {% if property.imageName %}
            <img src="{{ vich_uploader_asset(property,"imageFile") | imagine_filter("thumb") }}" alt="" class="card-img-top">
        {% else %}
            <img src="{{ "images/properties/empty.jpg" | imagine_filter("thumb") }}" alt="" class="card-img-top" >
        {% endif %}

        <div class="card-body">
            <h5 class="card-title"><a href="{{ path('property.show', {id: property.id, slug: property.slug}) }}">{{ property.title }}</a></h5>
            <p class="card-text">{{ property.city }} - {{ property.postalCode }}</p>
            <p class="card-text">Surface - {{ property.surface }}m²</p>
            <div style="font-size: 2rem;" class="text-primary">{{ property.formatedPrice }} €</div>
        </div>
    </div>
</div>